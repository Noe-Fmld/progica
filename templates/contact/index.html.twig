{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Vos contacts{% endblock %}

{% block body %}
    <h1>Vos contacts</h1>

    <a href="{{ path('app_contact_new') }}" class="btn btn-outline-success my-4">+ Ajouter un nouveau contact</a>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.name }}</td>
                <td>{{ contact.firstName }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.phone }}</td>
                <td>
                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}" class="btn btn-primary">Afficher</a>
                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-success">Modifier</a>
                    {{ include('contact/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun contact trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
