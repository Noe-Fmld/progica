{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Contact : {{ contact.firstName }} {{ contact.name }}{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.firstName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ contact.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}" class="btn btn-primary">← Retour à la liste</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
